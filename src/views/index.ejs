            <div class="flex gap-2">
                <input type="text" 
                       id="chatInput"
                       class="flex-1 bg-gray-100 rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" 
                       placeholder="Type your message..."
                       onkeypress="if(event.key === 'Enter') sendMessage()">
